{
  "name": "@soco/utils",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./cn": {
      "types": "./dist/cn.d.ts",
      "default": "./src/cn.ts"
    },
    "./nanoid": {
      "types": "./dist/nanoid.d.ts",
      "default": "./src/nanoid.ts"
    },
    "./timestamps": {
      "types": "./dist/timestamps.d.ts",
      "default": "./src/timestamps.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore --fix",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "nanoid": "^5.0.7",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@soco/eslint-config": "workspace:*",
    "@soco/prettier-config": "workspace:*",
    "@soco/tsconfig": "workspace:*",
    "eslint": "^8",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "prettier": "@soco/prettier-config"
}
