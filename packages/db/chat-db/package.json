{
  "name": "@soco/chat-db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema/chats": {
      "types": "./dist/schema/chats.d.ts",
      "default": "./src/schema/chats.ts"
    },
    "./schema/chatMessages": {
      "types": "./dist/schema/chatMessages.d.ts",
      "default": "./src/schema/chatMessages.ts"
    },
    "./schema/chatMessagesCurrents": {
      "types": "./dist/schema/chatMessagesCurrents.d.ts",
      "default": "./src/schema/chatMessagesCurrents.ts"
    },
    "./schema/chatUsers": {
      "types": "./dist/schema/chatUsers.d.ts",
      "default": "./src/schema/chatUsers.ts"
    },
    "./schema/auth": {
      "types": "./dist/schema/auth.d.ts",
      "default": "./src/schema/auth.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "push": "pnpm with-env drizzle-kit push",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@soco/utils": "workspace:*",
    "@t3-oss/env-core": "^0.10.1",
    "postgres": "^3.4.4",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@soco/eslint-config": "workspace:*",
    "@soco/prettier-config": "workspace:*",
    "@soco/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.22.7",
    "eslint": "^8",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "prettier": "@soco/prettier-config"
}
