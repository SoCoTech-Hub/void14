{
    "name":  "@soco/user-db",
    "version":  "0.1.0",
    "private":  true,
    "type":  "module",
    "exports":  {
                    "./schema/wikis":  {
                                           "types":  "./dist/schema/wikis.d.ts",
                                           "default":  "./src/schema/wikis.ts"
                                       },
                    "./schema/auth":  {
                                          "types":  "./dist/schema/auth.d.ts",
                                          "default":  "./src/schema/auth.ts"
                                      },
                    "./schema/wikiVersions":  {
                                                  "types":  "./dist/schema/wikiVersions.d.ts",
                                                  "default":  "./src/schema/wikiVersions.ts"
                                              },
                    "./schema/wikiSynonyms":  {
                                                  "types":  "./dist/schema/wikiSynonyms.d.ts",
                                                  "default":  "./src/schema/wikiSynonyms.ts"
                                              },
                    "./schema/wikiLinks":  {
                                               "types":  "./dist/schema/wikiLinks.d.ts",
                                               "default":  "./src/schema/wikiLinks.ts"
                                           },
                    "./schema/wikiLocks":  {
                                               "types":  "./dist/schema/wikiLocks.d.ts",
                                               "default":  "./src/schema/wikiLocks.ts"
                                           },
                    "./schema/wikiSubwikis":  {
                                                  "types":  "./dist/schema/wikiSubwikis.d.ts",
                                                  "default":  "./src/schema/wikiSubwikis.ts"
                                              },
                    "./schema/wikiPages":  {
                                               "types":  "./dist/schema/wikiPages.d.ts",
                                               "default":  "./src/schema/wikiPages.ts"
                                           }
                },
    "license":  "MIT",
    "scripts":  {
                    "build":  "tsc",
                    "dev":  "tsc --watch",
                    "clean":  "rm -rf .turbo node_modules",
                    "format":  "prettier --check . --ignore-path ../../.gitignore",
                    "lint":  "eslint",
                    "push":  "pnpm with-env drizzle-kit push",
                    "studio":  "pnpm with-env drizzle-kit studio",
                    "typecheck":  "tsc --noEmit --emitDeclarationOnly false",
                    "with-env":  "dotenv -e ../../.env --"
                },
    "dependencies":  {
                         "@soco/utils":  "workspace:*",
                         "@t3-oss/env-core":  "^0.10.1",
                         "postgres":  "^3.4.4",
                         "drizzle-orm":  "^0.31.2",
                         "drizzle-zod":  "^0.5.1",
                         "zod":  "^3.23.8"
                     },
    "devDependencies":  {
                            "@soco/eslint-config":  "workspace:*",
                            "@soco/prettier-config":  "workspace:*",
                            "@soco/tsconfig":  "workspace:*",
                            "dotenv-cli":  "^7.4.2",
                            "drizzle-kit":  "^0.22.7",
                            "eslint":  "^8",
                            "prettier":  "^3.3.2",
                            "typescript":  "^5.4.5"
                        },
    "prettier":  "@soco/prettier-config"
}
